@model List<CMCS.Web.Models.ClaimEntry>
@{
    ViewData["Title"] = "Create Claim";
}
<h2>Claim for August 2025</h2>
<p class="text-muted">Contract: 2025-IC-123 | Hourly Rate: R450 | Total: (auto)</p>

<form asp-action="Create" method="post">
    <table class="table table-bordered">
        <thead>
            <tr><th>Date</th><th>Module</th><th>Task Type</th><th>Hours</th><th>Notes</th></tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td><input asp-for="@Model[i].WorkDate" class="form-control" /></td>
                <td><input asp-for="@Model[i].Module" class="form-control" /></td>
                <td><input asp-for="@Model[i].TaskType" class="form-control" /></td>
                <td><input asp-for="@Model[i].Hours" class="form-control" /></td>
                <td><input asp-for="@Model[i].Notes" class="form-control" /></td>
            </tr>
        }
        </tbody>
    </table>

    <div class="mb-3">
        <label class="form-label">Attachments (prototype)</label>
        <input type="file" class="form-control" disabled />
        <div class="form-text">File upload is mocked in this prototype.</div>
    </div>

    <button type="submit" class="btn btn-success">Submit Claim</button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Save as Draft (mock)</a>
</form>