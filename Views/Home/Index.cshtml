@model IEnumerable<CMCS.Web.Models.ClaimSummary>
@{
    ViewData["Title"] = "Dashboard";
}
<div class="d-flex justify-content-between align-items-center">
    <h2>Contract Monthly Claim System (CMCS)</h2>
    <a class="btn btn-primary" asp-action="Create">Create New Claim</a>
</div>

@if(TempData["Msg"] != null){
    <div class="alert alert-success mt-3">@TempData["Msg"]</div>
}

<table class="table table-striped mt-3">
    <thead>
        <tr><th>Month</th><th>Status</th><th>Total Hours</th><th>Total Amount</th></tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Month</td>
            <td><span class="badge bg-secondary">@c.Status</span></td>
            <td>@c.TotalHours</td>
            <td>R @c.TotalAmount.ToString("N2")</td>
        </tr>
    }
    </tbody>
</table>
<a asp-action="Queue">Go to Approver Queue</a>